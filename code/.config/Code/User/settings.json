{
  "workbench.colorTheme": "Alt Catppuccin Mocha",
  "editor.fontFamily": "'Jetbrain mono','Droid Sans Mono', 'monospace', monospace",
  "editor.minimap.enabled": false,
  "alt-catppuccin.extraBordersEnabled": true,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  "window.density.editorTabHeight": "compact",
  "workbench.editor.scrollToSwitchTabs": true,
  "window.customTitleBarVisibility": "auto",
  "editor.cursorSmoothCaretAnimation": "on",
  "files.autoSave": "onFocusChange",
  "editor.lineNumbers": "relative",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "ewditor.formatOnPaste": true,
  "workbench.startupEditor": "none",
  "markdown-preview-enhanced.previewTheme": "monokai.css"
  // config above
}
